{
	"include": ["src/**/*.ts"],
	"compilerOptions": {
		"rootDir": "src",
		"target": "es6",
		"lib": ["es2021"],
		"module": "node16",
		"moduleResolution": "node16",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "types",
		"emitDeclarationOnly": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"forceConsistentCasingInFileNames": true
	}
}
